<div class="section container home-page">

    <h1>Products</h1>
    <% @products.each do |product| %>
      <div class="box">
        <p><strong><%= product.name %></strong> | <%= number_to_currency product.price %>
        <%= form_for @order_item do |f| %>

            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.number_field :quantity, class: "input" %> <br><br>
            <%= f.submit "Add to cart", class: "button is-info is-rounded" %>
          <br>
        <% end %></p>
      </div>
    <% end %>
  </div>
</div>